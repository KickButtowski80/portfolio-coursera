{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  
  "rewrites": [
    {
      "source": "/js/config/firebase-config.json", 
      "destination": "/js/config/firebase-config.json"
    },
    { "source": "/js/(.*)", "destination": "/js/$1" },
    { "source": "/css/(.*)", "destination": "/css/$1" },
    { "source": "/assets/(.*)", "destination": "/assets/$1" },
    { "source": "/svg/(.*)", "destination": "/svg/$1" },
    { "source": "/html_finalprojimages/(.*)", "destination": "/html_finalprojimages/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/js/config/firebase-config.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}